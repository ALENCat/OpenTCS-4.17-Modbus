<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.lvsrobot.webclient.controls</groupId>
    <artifactId>com.lvsrobot.webclient.controls</artifactId>
    <packaging>war</packaging>
    <version>1.1.0</version>
    <name>com.lvsrobot.webclient.controls</name>
    <url>http://maven.apache.org</url>

    <dependencies>

        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.jface</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.rwt</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.filedialog</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.fileupload</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.rwt.testfixture</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.nebula.jface.gridviewer</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.nebula.widgets.grid</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.ui</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.jface.databinding</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.ui.workbench</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.ui.forms</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.ui.views</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.nebula.widgets.richtext</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.rap</groupId>
            <artifactId>org.eclipse.rap.ui.cheatsheets</artifactId>
            <version>3.13.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.core</groupId>
            <artifactId>org.eclipse.core.commands</artifactId>
            <version>3.6.0</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>org.eclipse.core</groupId>
            <artifactId>org.eclipse.core.runtime</artifactId>
            <version>3.7.0</version>
        </dependency>

        <dependency>
            <scope>compile</scope>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <version>2.2</version>
        </dependency>
        <dependency>
            <scope>compile</scope>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>4.0.1</version>
        </dependency>
    </dependencies>
    <build>
        <finalName>com.lvsrobot.webclient.controls</finalName>
        <plugins>
            <!-- see http://wiki.eclipse.org/Jetty/Feature/Jetty_Maven_Plugin#jetty:run_:__Running_an_unassembled_webapp -->
            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>9.4.18.v20190429</version>
                <configuration>
                    <scanIntervalSeconds>10</scanIntervalSeconds>
                    <webApp>
                        <contextPath>/</contextPath>
                    </webApp>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>